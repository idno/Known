<IfModule mod_rewrite.c>
    RewriteEngine on

    # Uncomment and edit if running in a subdirectory of domain.
    #RewriteBase /~foo/bar/

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond $1 !^(index\.php)
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
